[run]
source = ccscv
omit = 
    */tests/*
    */examples/*
    */__pycache__/*
    */venv/*
    */env/*
    */\.venv/*
    */\.env/*
    */build/*
    */dist/*
    */\.git/*
    */\.github/*
    */docs/*
    */\.mypy_cache/*
    */\.pytest_cache/*
    */\.coverage*
    */htmlcov/*
    */coverage.xml

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    def __str__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod
    # type: ignore
    # noqa
    # fmt: off
    # fmt: on
    # pylint:
    # flake8:
    # mypy:
    # coverage:
    # nose:
    # doctest:
    # unittest:
    # pytest:
    # hypothesis:
    # black:
    # isort:
    # bandit:
    # safety:
    # radon:
    # xenon:
    # vulture:
    # deadcode:
    # complexity:
    # maintainability:
    # security:
    # performance:
    # memory:
    # benchmark:
    # profiling:
    # timing:
    # slow:
    # integration:
    # unit:
    # mathematical:
    # surface_code:
    # decoder:
    # homology:
    # critical:
    # large:
    # scalability:

ignore_errors = True
show_missing = True
precision = 2

[html]
directory = htmlcov
title = ChainComplex Surface Code Visualizer Coverage Report
extra_css = 
    body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif; }
    .header { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 20px; border-radius: 8px; margin-bottom: 20px; }
    .header h1 { margin: 0; font-size: 2.5em; font-weight: 300; }
    .header p { margin: 10px 0 0 0; opacity: 0.9; }
    .file { border: 1px solid #e1e5e9; border-radius: 6px; margin-bottom: 15px; }
    .file .header { background: #f8f9fa; color: #495057; padding: 10px 15px; border-radius: 6px 6px 0 0; border-bottom: 1px solid #e1e5e9; }
    .file .header h2 { margin: 0; font-size: 1.2em; font-weight: 600; }
    .file .header .stats { float: right; font-size: 0.9em; opacity: 0.8; }
    .file .source { background: white; padding: 15px; border-radius: 0 0 6px 6px; }
    .file .source pre { margin: 0; font-family: "SF Mono", Monaco, "Cascadia Code", "Roboto Mono", Consolas, "Courier New", monospace; font-size: 13px; line-height: 1.4; }
    .file .source .highlight { background: #fff3cd; border: 1px solid #ffeaa7; border-radius: 3px; padding: 2px 4px; }
    .file .source .covered { background: #d4edda; border: 1px solid #c3e6cb; border-radius: 3px; padding: 2px 4px; }
    .file .source .uncovered { background: #f8d7da; border: 1px solid #f5c6cb; border-radius: 3px; padding: 2px 4px; }
    .summary { background: white; border: 1px solid #e1e5e9; border-radius: 6px; padding: 20px; margin-bottom: 20px; }
    .summary h2 { margin-top: 0; color: #495057; }
    .summary .stats { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px; }
    .summary .stat { background: #f8f9fa; padding: 15px; border-radius: 6px; text-align: center; }
    .summary .stat .number { font-size: 2em; font-weight: 600; color: #667eea; }
    .summary .stat .label { color: #6c757d; font-size: 0.9em; margin-top: 5px; }
    .summary .stat.coverage-high .number { color: #28a745; }
    .summary .stat.coverage-medium .number { color: #ffc107; }
    .summary .stat.coverage-low .number { color: #dc3545; }

[xml]
output = coverage.xml

[term]
show_missing = True
precision = 2
